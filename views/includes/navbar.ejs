            <button id="close-menu" class="p-2 rounded focus:outline-none" aria-label="Close menu">
                <svg class="w-6 h-6 text-[#181611]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <a class="text-[#181611] text-base font-medium py-2 hover:text-[#f3c144] transition-colors duration-300"
           href="/listings">Explore</a>
        <a class="text-[#181611] text-base font-medium py-2 hover:text-[#f3c144] transition-colors duration-300"
