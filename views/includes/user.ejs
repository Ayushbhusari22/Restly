<div class="relative flex size-full min-h-screen flex-col bg-white group/design-root overflow-x-hidden"
     style='font-family: "Plus Jakarta Sans", "Noto Sans", sans-serif;'>
    <div class="layout-container flex h-full grow flex-col">
        <div class="px-4 sm:px-6 md:px-8 lg:px-40 flex flex-1 justify-center">
            <div class="layout-content-container flex flex-col w-full max-w-[960px] py-8">

                <!-- Profile Header -->
                <div class="flex flex-col items-center mb-8">
                    <div class="w-32 h-32 rounded-full overflow-hidden mb-4">
                        <% if (user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="Profile" class="w-full h-full object-cover">
                        <% } else { %>
                        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                            <i class="fas fa-user text-4xl text-gray-400"></i>
                        </div>
                        <% } %>
                    </div>
                    <h1 class="text-2xl font-bold mb-1"><%= user.username %></h1>
                    <p class="text-gray-600 text-sm">Joined in <%= user.createdAt.getFullYear() %></p>
                    <button
                            class="mt-4 px-4 py-2 border border-gray-300 rounded-full text-sm hover:bg-gray-50 transition-colors">
                        Edit profile
                    </button>
                </div>

                <!-- About Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold mb-4">About</h2>
                    <p class="text-gray-600">
                        <%= user.about || "I'm a passionate traveler and love exploring new cultures. I enjoy hosting and sharing my space with fellow adventurers." %>
                    </p>
                </div>

                <!-- Verified Information -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold mb-4">Verified information</h2>
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-id-card text-gray-600"></i>
                            <span>Identity</span>
                            <i class="fas fa-check text-green-500 ml-auto"></i>
                        </div>
                        <div class="flex items-center gap-3">
                            <i class="fas fa-envelope text-gray-600"></i>
                            <span>Email address</span>
                            <i class="fas fa-check text-green-500 ml-auto"></i>
                        </div>
                        <div class="flex items-center gap-3">
                            <i class="fas fa-phone text-gray-600"></i>
                            <span>Phone number</span>
                            <i class="fas fa-check text-green-500 ml-auto"></i>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold mb-4">Reviews</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <% if (user.reviews && user.reviews.length > 0) { %>
                        <% user.reviews.forEach(review => { %>
                        <div class="border rounded-xl p-4">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                <div>
                                    <p class="font-medium"><%= review.author.username %></p>
                                    <p class="text-gray-500 text-sm">
                                        <%= review.createdAt.toLocaleDateString("en-US", { month: 'long', year: 'numeric' }) %>
                                    </p>
                                </div>
                            </div>
                            <div class="flex gap-1 text-[#f4c653] mb-2">
                                <% for(let i = 0; i < 5; i++) { %>
                                <i
                                   class="fas fa-star <%= i < review.rating ? 'text-[#f4c653]' : 'text-gray-300' %>"></i>
                                <% } %>
                            </div>
                            <p class="text-gray-600"><%= review.comment %></p>
                        </div>
                        <% }) %>
                        <% } else { %>
                        <p class="text-gray-500">No reviews yet</p>
                        <% } %>
                    </div>
                </div>

                <!-- Trips Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold mb-4">Trips</h2>
                    <% if (user.trips && user.trips.length > 0) { %>
                    <!-- Add trips display logic here -->
                    <% } else { %>
                    <div class="text-center py-8">
                        <img src="/images/no-trips.png" alt="No trips" class="w-48 mx-auto mb-4">
                        <p class="text-gray-600 mb-2">No trips yet</p>
                        <p class="text-gray-500 text-sm mb-4">Once you've booked a trip, you'll see the details here.
                        </p>
                        <a href="/listings"
                           class="inline-block px-4 py-2 bg-[#f4c653] text-[#1c170d] rounded-full font-medium hover:bg-[#e5b53c] transition-colors">
                            Start exploring
                        </a>
                    </div>
                    <% } %>
                </div>

                <!-- Settings Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold mb-4">Settings</h2>
                    <div class="space-y-4">
                        <a href="/settings/payment"
                           class="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex items-center gap-3">
                                <i class="fas fa-credit-card text-gray-600"></i>
                                <span>Payment methods</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400"></i>
                        </a>
                        <a href="/settings/notifications"
                           class="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex items-center gap-3">
                                <i class="fas fa-bell text-gray-600"></i>
                                <span>Notifications</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400"></i>
                        </a>
                        <a href="/settings/privacy"
                           class="flex items-center justify-between p-4 border rounded-lg hover:bg-gray-50 transition-colors">
                            <div class="flex items-center gap-3">
                                <i class="fas fa-shield-alt text-gray-600"></i>
                                <span>Privacy settings</span>
                            </div>
                            <i class="fas fa-chevron-right text-gray-400"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>