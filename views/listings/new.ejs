<% layout("/layouts/boilerplate") %>
<div class="relative flex size-full min-h-screen flex-col bg-white group/design-root overflow-x-hidden"
     style='font-family: "Plus Jakarta Sans", "Noto Sans", sans-serif;'>
    <div class="layout-container flex h-full grow flex-col">

        <!-- Changed padding to be responsive -->
        <div class="px-4 sm:px-6 md:px-8 lg:px-40 flex flex-1 justify-center">
            <!-- Adjusted max-width and padding -->
            <div class="layout-content-container flex flex-col w-full max-w-[512px] py-3 sm:py-5 flex-1">
                <h2
                    class="text-[#181611] tracking-light text-xl sm:text-[28px] font-bold leading-tight px-2 sm:px-4 text-center pb-3">
                    Create New Listing
                </h2>

                <form action="/listings" method="POST" novalidate class="needs-validation"
                      enctype="multipart/form-data">
                    <div class="flex flex-col gap-3 sm:gap-4 px-2 sm:px-4 py-2 sm:py-3">

                        <!-- Title field -->
                        <label class="flex flex-col min-w-full flex-1">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">Title
                            </p>
                            <input name="listing[title]"
                                   placeholder="Cozy Apartment in Downtown"
                                   type="text"
                                   class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none h-12 sm:h-14 placeholder:text-[#837b67] p-3 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                   required />
                        </label>

                        <!-- Location field -->
                        <label class="flex flex-col min-w-full flex-1">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">
                                Location
                            </p>
                            <input name="listing[location]"
                                   placeholder="Mumbai, Maharashtra"
                                   type="text"
                                   class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none h-12 sm:h-14 placeholder:text-[#837b67] p-3 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                   required />
                        </label>

                        <!-- Price field -->
                        <label class="flex flex-col min-w-full flex-1">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">Price
                                (â‚¹)</p>
                            <input name="listing[price]"
                                   placeholder="2999"
                                   type="number"
                                   class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none h-12 sm:h-14 placeholder:text-[#837b67] p-3 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                   required />
                        </label>

                        <!-- Country field -->
                        <label class="flex flex-col min-w-full flex-1">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">
                                Country
                            </p>
                            <input name="listing[country]"
                                   placeholder="India"
                                   type="text"
                                   class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none h-12 sm:h-14 placeholder:text-[#837b67] p-3 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                   required />
                        </label>

                        <!-- Description field -->
                        <label class="flex flex-col min-w-full flex-1">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">
                                Description</p>
                            <textarea name="listing[description]"
                                      placeholder="Describe your place"
                                      class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none h-24 sm:h-32 placeholder:text-[#837b67] p-3 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                      required></textarea>
                        </label>

                        <!-- Image upload section -->
                        <div class="flex flex-col flex-1 border border-dashed border-[#b3ac9f] rounded-xl p-4 sm:p-8 text-center"
                             style="background-color: #f4f3f1;">
                            <p class="text-[#181611] text-sm sm:text-base font-medium leading-normal pb-1 sm:pb-2">
                                Upload Images</p>
                            <p class="text-[#837b67] text-xs sm:text-sm font-normal leading-normal pb-2 sm:pb-4">Drag
                                and drop or click to upload</p>
                            <input name="listing[image]"
                                   type="file"
                                   class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181611] focus:outline-0 focus:ring-0 border-none bg-[#f4f3f1] focus:border-none placeholder:text-[#837b67] p-2 sm:p-4 text-sm sm:text-base font-normal leading-normal"
                                   required>
                        </div>

                       
                    </div>

                    <!-- Submit button -->
                    <div class="flex justify-center px-2 sm:px-4 py-2 sm:py-3">
                        <button type="submit"
                                class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-10 sm:h-12 px-4 sm:px-6 flex-1 bg-[#f3c144] text-white text-sm sm:text-base font-bold leading-normal tracking-[0.015em]">
                            <span class="truncate">Publish Listing</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>